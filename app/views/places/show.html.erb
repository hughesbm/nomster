<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1><%= @place.name %></h1>
  <br />
  <i><%= @place.address %></i>
  <br /><br />
  <p><%= @place.description %></p>
  </br />
  <% if @place.user.present? %>
    <small>Added by: <%= @place.user.email %></small>
  <% end %>
  <% if @place.latitude.present? && @place.longitude.present? %>
    <br /><br />
    <script>

      function initMap() {
        var myLatLng = {lat: <%= @place.latitude %>, lng: <%= @place.longitude %>};

        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 13,
          center: myLatLng
        });

        var marker = new google.maps.Marker({
          position: myLatLng,
          map: map,
          title: 'Hello World!'
        });
      }
    </script>

    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBpdYH6MYNxbaIrV6Vky7_hIcGLlxphAvo&callback=initMap">
    </script>

    <div id="map"></div>
  <% end %>
  <br />
  <% if current_user && current_user == @place.user %>
    <div class="pull-right">
      <%= link_to 'Edit', edit_place_path(@place), class: 'btn btn-info' %>
      <%= link_to 'Destroy', place_path(@place), method: :delete, data: {confirm: 'Are you sure you want to delete this place?' }, class: 'btn btn-danger' %>
    </div>
    <br /><br />
  <% end %>
  <hr class="clear" />
<!--</div>
<div class="booyah-box col-xs-10 col-xs-offset-1">-->
  <h2>Reviews</h2>
  <br />
  <% @place.comments.each do |comment| %>
      <blockquote>
        <b><%= comment.rating %> / 5</b> -
          <%= comment.message %>
        <small><%= @place.user.email %></small>
      </blockquote>
  <% end %>
  <hr />
  <h3>Add a Review</h3>
  <br />
  <%= simple_form_for @comment, url: place_comments_path(@place) do |f| %>
    <%= f.input :message %>
    <br />
    <%= f.input :rating %>
    <br />
    <%= f.submit 'Add a Comment', class: 'btn btn-primary' %>
  <% end %>
</div>
