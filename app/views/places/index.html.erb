<div id="nomster-carousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#nomster-carousel" data-slide-to="0" class="active"></li>
    <li data-target="#nomster-carousel" data-slide-to="1"></li>
    <li data-target="#nomster-carousel" data-slide-to="2"></li>
    <li data-target="#nomster-carousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
    <div class="item active">
      <%= image_tag 'slider1.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Find the best food after a relaxing day at the beach.
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Have a great meal, then take in a movie at the historic Alameda Theatre.
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider3.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Spend a fortune on a silly house on the bay, then eat somewhere, I guess.
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider4.jpg', class: 'img-responsive' %>
      <div class="carousel-caption">
        Tour the USS Hornet and then eat. Or vice versa. Whatever.
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#nomster-carousel" role="button" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#nomster-carousel" role="button" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
<% @places.each do |place| %>
  <div class="booyah-box col-xs-10 col-xs-offset-1">
    <div class="row index-row">
      <% if place.photos.present? %>
        <div class="col-xs-12 col-sm-5 col-md-4 col-lg-3">
          <a href="<%= place_path(place) %>">
            <%= image_tag place.photos.first.picture_url(:thumb), class: "thumbnail index-photo img-responsive" %>
          </a>
        </div>
        <div class="col-xs-12 col-sm-7 col-md-8 col-lg-9">
      <% else %>
        <div class="col-xs-12">
      <% end %>
          <h1><%= link_to place.name, place_path(place) %></h1><br />
          <i><%= place.address %></i><br /><br />
          <p><%= place.description %></p>
          <% if place.comments.present? %>
                <blockquote>
                  <% if place.comments.last.rating.present? %>
                    <% place.comments.last.rating.chr.to_i.times do %>
                      <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                    <% end %>
                    <% (5 - place.comments.last.rating.chr.to_i).times do %>
                      <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
                    <% end %>
                    <br />
                  <% end %>
                  <%= place.comments.last.message %>
                  <small><%= place.comments.last.user.email %></small>
                </blockquote>
          <% end %>
        </div>
    </div>
  </div>
<% end %>
<br class="clear" />
<div class="text-center">
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
</div>
