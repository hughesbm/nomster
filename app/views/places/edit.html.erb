<div class="booyah-box col-xs-10 col-xs-offset-1">
  <% if @place.name.present? %>
    <h1>Edit <%= @place.name %> Details</h1>
  <% else %>
    <h1>Edit Place Details</h1>
  <% end %>
  <br />
  <%= simple_form_for @place do |f| %>
    <%= f.input :name %>
    <br />
    <%= f.input :address %>
    <br />
    <%= f.input :description %>
    <br />
    <%= f.submit 'Update', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', place_path(@place), class: 'btn btn-default' %>
  <% end %>
</div>
